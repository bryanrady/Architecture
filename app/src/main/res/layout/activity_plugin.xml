<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_layout"/>

    <Button
        android:id="@+id/btn_plugin_load_apk"
        android:layout_below="@+id/toolbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="插件化加载apk" />

    <Button
        android:id="@+id/btn_operator_transfer"
        android:layout_below="@+id/btn_plugin_load_apk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="变换操作符" />

    <Button
        android:id="@+id/btn_operator_filter"
        android:layout_below="@+id/btn_operator_transfer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="过滤操作符" />

    <Button
        android:id="@+id/btn_operator_merge"
        android:layout_below="@+id/btn_operator_filter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="合并聚合操作符" />

    <Button
        android:id="@+id/btn_operator_condition"
        android:layout_below="@+id/btn_operator_merge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="条件操作符" />

    <Button
        android:id="@+id/btn_operator_exception"
        android:layout_below="@+id/btn_operator_condition"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="异常操作符" />

</RelativeLayout>
