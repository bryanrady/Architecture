<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_layout"/>

    <Button
        android:id="@+id/btn_transfer_operator_map"
        android:layout_below="@+id/toolbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="map" />

    <Button
        android:id="@+id/btn_transfer_operator_flatMap"
        android:layout_below="@+id/btn_transfer_operator_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="flatMap" />

    <Button
        android:id="@+id/btn_transfer_operator_groupBy"
        android:layout_below="@+id/btn_transfer_operator_flatMap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="groupBy" />

    <Button
        android:id="@+id/btn_transfer_operator_buffer"
        android:layout_below="@+id/btn_transfer_operator_groupBy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="buffer" />

    <Button
        android:id="@+id/btn_transfer_operator_scan"
        android:layout_below="@+id/btn_transfer_operator_buffer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="scan" />

    <Button
        android:id="@+id/btn_transfer_operator_window"
        android:layout_below="@+id/btn_transfer_operator_scan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="window" />

</RelativeLayout>
